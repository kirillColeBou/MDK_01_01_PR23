<Page x:Class="OrderingGifts_Фамилия.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderingGifts_Фамилия.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#FF4C4C4C">
        <Grid VerticalAlignment="Top" MinHeight="80" Background="#FF6B4DDB">
            <Image Source="/OrderingGifts_Тепляков;component/Images/icon.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="60" Width="60"/>
            <Label Content="Заказ подарков" Foreground="White" FontFamily="Corbel" FontSize="36" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,11,0,0"/>
        </Grid>
        <Grid Margin="0,80,0,50">
            <ScrollViewer Margin="10,10,10,10">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
        </Grid>
        <Grid VerticalAlignment="Bottom" MinHeight="50">
            <Button Click="AddNewGift" Content="Добавить" Width="120" Height="25" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Button Click="RangeGift" Content="Сортировать" Width="120" Height="25" HorizontalAlignment="Left" Margin="140,0,0,0" x:Name="BtnRange"/>
        </Grid>
    </Grid>
</Page>
